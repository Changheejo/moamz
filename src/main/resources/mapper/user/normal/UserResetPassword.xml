    <update id="updatePassword" parameterType="UserResetPasswordDTO">
    UPDATE FG_COMMON_USER
    SET FG_USER_PASSWORD = #{fgUSerPassword}
    WHERE FG_USER_CODE = #{fgUserCode}
    </update>
</mapper>